<section class="bg-image" style="background-color: #f5f5f5; min-height: 100vh;">
  <div class="mask d-flex align-items-center gradient-custom-3" style="min-height: 100vh;">
    <div class="container">
      <div class="row d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Log in</h2>

              <% if resource.errors.any? %>
                <div class="alert alert-danger" style="border-radius: 10px; background-color: #f8d7da;">
                  <h4 class="text-center">Please fix the following errors:</h4>
                  <ul class="list-unstyled mb-0">
                    <% resource.errors.full_messages.each do |message| %>
                      <li class="mb-1"><i class="fas fa-exclamation-triangle"></i> <%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <%= form_with model: resource, url: session_path(resource_name), local: true do |f| %>

                <div data-mdb-input-init class="form-outline mb-4">
                  <%= f.text_field :email, class: "form-control form-control-lg", placeholder: "Email" %>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                  <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password" %>
                </div>

                <div class="d-flex justify-content-center">
                  <%= f.submit 'Log in', class:"btn btn-light border-dark btn-block btn-lg gradient-custom-4 text-body"%>
                </div>

                <p class="text-center text-muted mt-3 mb-0">Back to 
                  <%= link_to 'Sign up', new_user_registration_path, class: 'fw-bold text-body' %>
                </p>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
